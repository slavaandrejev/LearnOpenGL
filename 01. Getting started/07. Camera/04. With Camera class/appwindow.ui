<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.6"/>
    <object class="GtkApplicationWindow" id="mainWindow">
        <property name="title" translatable="yes">Learn OpenGL Camera Walk Look and Zoom, with Camera class</property>
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <property name="focus-widget">glArea</property>
        <property name="hide-on-close">True</property>
        <child>
            <object class="GtkBox" id="contentBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="GtkGLArea" id="glArea">
                        <property name="auto-render">True</property>
                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>
                        <property name="focusable">True</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>
