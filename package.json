{
  "name": "LearnOpenGL",
  "version": "0.1.0",
  "xpack": {
    "minimumXpmRequired": "0.10.2",
    "properties": {
      "buildFolderRelativePath": "{{ 'build' | path_join: configuration.name | to_filename | downcase }}",
      "toolchainFileName": "toolchain-gcc-meson.ini",
      "commandPrepare": "meson setup --backend ninja -Ddebug=false -Dbuildcfg={{ properties.buildType }} {{ properties.buildFolderRelativePath }}",
      "commandPrepareWithToolchain": "{{ properties.commandPrepare }} --native-file {{ properties.toolchainFileName }}",
      "commandReconfigure": "meson setup --reconfigure {{ properties.buildFolderRelativePath }}",
      "commandBuild": "meson compile -C {{ properties.buildFolderRelativePath }}",
      "commandClean": "meson compile -C {{ properties.buildFolderRelativePath }} --clean"
    },
    "actions": {
      "prepare-all": [
        "xpm run prepare --config Debug",
        "xpm run prepare --config Release",
        "xpm run prepare --config DebugOptimized"
      ],
      "build-all": [
        "xpm run build --config Debug",
        "xpm run build --config Release",
        "xpm run build --config DebugOptimized"
      ],
      "clean-all": [
        "xpm run clean --config Debug",
        "xpm run clean --config Release",
        "xpm run clean --config DebugOptimized"
      ]
    },
    "buildConfigurations": {
      "Debug": {
        "properties": {
          "buildType": "debug"
        },
        "actions": {
          "prepare": "{{ properties.commandPrepareWithToolchain }}",
          "build": [
            "{{ properties.commandReconfigure }}",
            "{{ properties.commandBuild }}"
          ],
          "clean": "{{ properties.commandClean }}"
        }
      },
      "Release": {
        "properties": {
          "buildType": "release"
        },
        "actions": {
          "prepare": "{{ properties.commandPrepareWithToolchain }}",
          "build": [
            "{{ properties.commandReconfigure }}",
            "{{ properties.commandBuild }}"
          ],
          "clean": "{{ properties.commandClean }}"
        }
      },
      "DebugOptimized": {
        "properties": {
          "buildType": "debugoptimized"
        },
        "actions": {
          "prepare": "{{ properties.commandPrepareWithToolchain }}",
          "build": [
            "{{ properties.commandReconfigure }}",
            "{{ properties.commandBuild }}"
          ],
          "clean": "{{ properties.commandClean }}"
        }
      }
    }
  }
}
